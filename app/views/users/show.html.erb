
<div id="page-content">
    <div class="container py-4">
        <h1 class="text-center">
            User profile detail
        </h1>
            <div class="row justify-content-center">
                <div class="col-12 col-md-8 mt-4">
                    <div class="card text-center">
                        <div class="card-header font-italic font-weight-bold">
                             <%= @user.name %>
                        </div>
                        <div class="card-body">
                            <div class="card-text text-center">
                               username: <%= @user.username %>
                            </div>
                            <div class="card-text text-center">
                               Email: <%= @user.email %>
                            </div>
                            <div class="row justify-content-center mt-4">
                                <%= link_to 'Edit', edit_user_path(@user), class: 'btn btn-outline-info mx-2' %>
                                <%= link_to 'Delete', user_path(@user), class: 'btn btn-outline-danger mx-2', method: :delete, data: { confirm: 'Are you sure you want to delete?'  } %>
                            </div>
                        </div>
                        <div class="card-footer text-muted">
                            Created about <%= time_ago_in_words(@user.created_at) %> ago, edited about <%= time_ago_in_words(@user.updated_at) %> ago
                        </div>
                    </div>
                </div>
            </div>
    </div>
</div>
