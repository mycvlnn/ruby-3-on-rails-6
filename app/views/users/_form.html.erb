<div class="container">
        <%= render 'shared/errors', target: @user %>
        <%= form_with(model: @user, class: 'shadow p-4 my-3 bg-info rounded', local: true, url: @user.id ? user_path : signup_path) do |f| %>
            <div class="form-group row">
                <%= f.label :name, class:"col-sm-2 col-form-label text-light" %>
                <div class="col-sm-10">
                    <%= f.text_field :name, class:"form-control shadow rounded", placeholder: "Enter your name"  %>
                </div>
            </div>
            <div class="form-group row">
                <%= f.label :username, class:"col-sm-2 col-form-label text-light" %>
                <div class="col-sm-10">
                    <%= f.text_field :username, class:"form-control shadow rounded", placeholder: "Enter a username"  %>
                </div>
            </div>
            <div class="form-group row">
                <%= f.label :email, class:"col-sm-2 col-form-label text-light" %>
                <div class="col-sm-10">
                    <%= f.email_field :email, class:"form-control shadow rounded", placeholder: "Enter your email address"  %>
                </div>
            </div>
            <div class="form-group row">
                <%= f.label :password, class:"col-sm-2 col-form-label text-light" %>
                <div class="col-sm-10">
                    <%= f.password_field :password, class:"form-control shadow rounded", placeholder: "Enter your password"  %>
                </div>
            </div>
            <div class="form-group row">
                <%= f.label :password_confirmation, class:"col-sm-2 col-form-label text-light" %>
                <div class="col-sm-10">
                    <%= f.password_field :password_confirmation, class:"form-control shadow rounded", placeholder: "Enter your password confirmation"  %>
                </div>
            </div>
            <div class="row justify-content-center">
                <%= f.submit  (@user.id ? 'Edit user' : 'Sign up'),  class: "btn btn-outline-light" %>
            </div> 
        <% end %>

        <%= link_to '[Return to users listing]', users_path, class: 'row justify-content-center text-info' %>
    </div>