<div id="page-content">
    <div class="container py-4">
        <h1 class="text-center">Alpha Bloggers</h1>
        <% @users.each do |user| %>
            <div class="row justify-content-center">
                <div class="col-12 col-md-8 mt-4">
                    <div class="card text-center">
                        <div class="card-header font-italic font-weight-light">
                             <%= link_to "By #{user.name}", user %>
                        </div>
                        <div class="card-body">
                           <div class="center">
                                <%# Cho phép truyền content là một thẻ img cho link_to %>
                                <%= link_to gravatar_for(user, size: 150), user_path(user) %>
                           </div>
                            <p class="card-text mt-2">
                                <%= user.articles.blank? ? 'No article yet' : pluralize(user.articles.count, 'article') %>
                            </p>
                            <div class="row justify-content-center">
                                <%= link_to 'View Profile', user_path(user), class: 'btn btn-outline-success mx-2'  %>
                                <%= link_to 'Edit Profile', edit_user_path(user), class: 'btn btn-outline-info mx-2' %>
                            </div>
                        </div>
                        <div class="card-footer text-muted">
                            Joined <%= time_ago_in_words(user.created_at) %> ago
                        </div>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
</div>
