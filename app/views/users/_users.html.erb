<% @users.each do |user| %>
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 mt-4">
            <div class="card text-center">
                <div class="card-header font-italic font-weight-light">
                        <%= link_to "By #{user.name} (ID: #{user.id}) #{current_user == user ? 'me': ''}", user %>
                </div>
                <div class="card-body">
                    <div class="center">
                        <%# Cho phép truyền content là một thẻ img cho link_to %>
                        <%= link_to gravatar_for(user, size: 150), user_path(user) %>
                    </div>
                    <p class="card-text mt-2">
                        <%= user.articles.blank? ? 'No article yet' : pluralize(user.articles.count, 'article') %>
                    </p>
                        <div class="row justify-content-center">
                            <%= link_to 'View Profile', user_path(user), class: 'btn btn-outline-success mx-2'  %>
                            <% if logged_in? && (user == current_user || current_user.admin?) %>
                                <%= link_to 'Edit Profile', edit_user_path(user), class: 'btn btn-outline-info mx-2' %>
                            <% end %>
                             <% if logged_in? && (current_user.admin? && current_user != user) %>
                                <%= link_to 'Delete Profile', user_path(user), class: 'btn btn-outline-danger mx-2', method: :delete, data: {confirm: 'Are you sure you want to delete this user?'} %>
                            <% end %>
                        </div>
                </div>
                <div class="card-footer text-muted">
                    Joined <%= time_ago_in_words(user.created_at) %> ago
                </div>
            </div>
        </div>
    </div>
<% end %>