<div id="page-content">
    <div class="container py-4">
        <h1 class="text-center">Listing all categories</h1>
        <% if @categories.count <= 0 %>
            <p class="text-center text-muted" style="font-size: 20px;">No category yet</p>
        <% end %>
        <div class="digg_pagination mt-3">
            <%= will_paginate @categories, :container => false %>
        </div>
        <% @categories.each do |category| %>
            <div class="row justify-content-center">
                <div class="col-12 col-md-8 mt-4">
                    <div class="card text-center">
                        <div class="card-body">
                            <h5 class="card-title"><%= link_to category.name, category_path(category), class: 'text-success' %></h5>
                            <div class="row justify-content-center">
                                <%= link_to 'View', category_path(category), class: 'btn btn-outline-success mx-2'  %>
                                <%= link_to 'Edit', edit_category_path(category), class: 'btn btn-outline-info mx-2' %>
                                <%= link_to 'Delete', category_path(category), class: 'btn btn-outline-danger mx-2', method: :delete, data: { confirm: 'Are you sure you want to delete?'  } %>
                            </div>
                        </div>
                        <div class="card-footer text-muted">
                            Created about <%= time_ago_in_words(category.created_at) %> ago, edited about <%= time_ago_in_words(category.updated_at) %> ago
                        </div>
                    </div>
                </div>
            </div>
        <% end %>
        <div class="digg_pagination mt-3">
            <%= will_paginate @categories, :container => false %>
        </div>
    </div>
</div>
