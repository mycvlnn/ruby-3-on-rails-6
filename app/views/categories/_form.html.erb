<div class="container">
    <%= render 'shared/errors', target: @category %>
    <%= form_with(model: @category, class: 'shadow p-4 my-3 bg-info rounded', local: true) do |f| %>
        <div class="form-group row">
            <%= f.label :name, 'Category Name', class:"col-sm-2 col-form-label text-light" %>
            <div class="col-sm-10">
                <%= f.text_field :name, class:"form-control shadow rounded", placeholder: "Name of category"  %>
            </div>
        </div>
        <div class="row justify-content-center">
            <%= f.submit class: "btn btn-outline-light" %>
        </div> 
    <% end %>

    <%= link_to '[Return to categories listing]', categories_path, class: 'row justify-content-center text-info' %>
</div>
