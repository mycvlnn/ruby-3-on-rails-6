<div class="container">
    <%= render 'shared/errors', target: @article %>
    <%= form_with(model: @article, class: 'shadow p-4 my-3 bg-info rounded', local: true) do |f| %>
        <div class="form-group row">
            <%= f.label :title, class:"col-sm-2 col-form-label text-light" %>
            <div class="col-sm-10">
                <%= f.text_field :title, class:"form-control shadow rounded", placeholder: "Title of article"  %>
            </div>
        </div>
        <div class="form-group row">
            <%= f.label :description, class:"col-sm-2 col-form-label text-light" %>
            <div class="col-sm-10">
                <%= f.text_area :description, rows: 10, class:"form-control shadow rounded", placeholder: "Description of article" %>
            </div>
        </div>
        <div class="row justify-content-center">
            <%= f.submit class: "btn btn-outline-light" %>
        </div> 
    <% end %>

    <%= link_to '[Return to articles listing]', articles_path, class: 'row justify-content-center text-info' %>
</div>
