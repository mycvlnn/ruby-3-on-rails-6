<div class="container">
    <% if @article.errors.any? %>
        <h2>The following errors prevented the article from being saved</h2>
        <ul>
            <% @article.errors.full_messages.each do |error| %>
                <li><%= error %></li>
            <% end %>
        </ul>
    <% end %>

    <%= form_with scope: :article, url: articles_path, class: 'shadow p-4 my-3 bg-info rounded', local: true do |f| %>
        <div class="form-group row">
            <%= f.label :title, class:"col-sm-2 col-form-label text-light" %>
            <div class="col-sm-10">
                <%= f.text_field :title, class:"form-control shadow rounded", placeholder: "Title of article"  %>
            </div>
        </div>
        <div class="form-group row">
            <%= f.label :description, class:"col-sm-2 col-form-label text-light" %>
            <div class="col-sm-10">
                <%= f.text_area :description, rows: 10, class:"form-control shadow rounded", placeholder: "Description of article" %>
            </div>
        </div>
        <div class="row justify-content-center">
            <%= f.submit class: "btn btn-outline-light" %>
        </div> 
    <% end %>

    <%= link_to '[Return to articles listing]', articles_path, class: 'row justify-content-center text-info' %>
</div>
