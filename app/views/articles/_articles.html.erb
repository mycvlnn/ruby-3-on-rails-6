<% if @articles.count <= 0 %>
    <p class="text-center text-muted" style="font-size: 20px;">No article yet</p>
<% end %>

<% @articles.each do |article| %>
            <div class="row justify-content-center">
                <div class="col-12 col-md-8 mt-4">
                    <div class="card text-center">
                        <div class="card-header font-italic font-weight-light">
                             <%= article.user.present? ? (link_to "By #{article.user.name} (ID: #{article.user.id})", article.user) : 'No author' %>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title"><%= link_to article.title, article_path(article), class: 'text-success' %></h5>
                            <% if article.categories.any? %>
                             <div class="mt-2">
                                <%= render article.categories %>
                             </div>
                            <% end %>
                            <p class="card-text">
                                <%= simple_format(truncate(article.description, length: 100)) %>
                            </p>
                            <div class="row justify-content-center">
                                <%= link_to 'View', article_path(article), class: 'btn btn-outline-success mx-2'  %>
                                <% if logged_in? && (article.user == current_user || current_user.admin?) %>
                                  <%= link_to 'Edit', edit_article_path(article), class: 'btn btn-outline-info mx-2' %>
                                  <%= link_to 'Delete', article_path(article), class: 'btn btn-outline-danger mx-2', method: :delete, data: { confirm: 'Are you sure you want to delete?'  } %>
                                <% end %>
                              </div>
                        </div>
                        <div class="card-footer text-muted">
                            Created about <%= time_ago_in_words(article.created_at) %> ago, edited about <%= time_ago_in_words(article.updated_at) %> ago
                        </div>
                    </div>
                </div>
            </div>
<% end %>